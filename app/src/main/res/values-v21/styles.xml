<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RicoPaRico" parent="Base.AppTheme">
    </style>

    <style name="Theme.ConNavigationDrawer" parent="Base.AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="theme_cabecera_drawer" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/background_cabecera_drawer</item>
    </style>


    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/cupa_pizarras_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="theme_titulos" parent="Theme.RicoPaRico">
        <item name="android:background">@color/backgroundAlternative</item>
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textTitulosColor</item>
    </style>

    <style name="AppBarCupaTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CuadrosEnsayo" parent="android:TextAppearance">
        <item name="android:textColor">@color/textTitulosColor</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>

    <style name="titulo_caja_ensayos">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="numero_caja_ensayos">
        <item name="fontFamily">@font/source_sans_pro_black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColorHint">@color/textTitulosColor</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="spinner_caja_ensayos">
        <item name="fontFamily">@font/source_sans_pro_black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">@color/textTitulosColor</item>
        <item name="android:textColor">@color/textTitulosColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="hint_caja_ensayos">
        <item name="fontFamily">@font/source_sans_pro_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">@null</item>
    </style>

    <style name="dashboard_caja_titulos">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="dashboard_caja_hint">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="loading">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>
</resources>